<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
  xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

  <bean id="serviceContainerWithoutAutoStart" class="org.springrunner.service.ServiceContainer">
    <property name="services">
      <list>
        <bean class="org.springrunner.unit.service.StartCounterService">
          <property name="name" value="service0"></property>
        </bean>
      </list>
    </property>
  </bean>

  <bean id="serviceContainerWithAutoStart" class="org.springrunner.service.ServiceContainer" init-method="start" destroy-method="stop">
    <property name="services">
      <list>
        <bean class="org.springrunner.unit.service.StartCounterService">
          <property name="name" value="service0"></property>
        </bean>
        <bean class="org.springrunner.unit.service.StartCounterService">
          <property name="name" value="service1"></property>
        </bean>
      </list>
    </property>
  </bean>
  
</beans>
